rules_version = '2';

// Firebase Storage Rules
// IMPORTANT: These rules MUST be deployed to Firebase Console
// Run: firebase deploy --only storage

service firebase.storage {
  match /b/{bucket}/o {
    
    // PUBLIC READ: Anyone can view uploaded files
    match /{allPaths=**} {
      allow read: if true;
    }

    // SHOP ASSETS: /shop-assets/{userId}/...
    // User can only upload to their own folder
    match /shop-assets/{userId}/{allFiles=**} {
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024;  // Max 10MB
    }

    // AVATARS: /avatars/...
    // Any authenticated user can upload avatar
    match /avatars/{allFiles=**} {
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024;  // Max 5MB
    }

    // PROFILE PICTURES: /profile-pictures/{userId}/...
    // User can only upload to their own folder
    match /profile-pictures/{userId}/{allFiles=**} {
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024;  // Max 5MB
    }
  }
}
