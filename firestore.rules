// Firestore security rules tailored to the project's schema.
// Collections used by the app:
//  - shops            (owned by a user, visible to everyone)
//  - profiles         (one document per user)
//  - roles            (maps user IDs to roles such as "admin")
//  - reviews          (public reviews for shops)
//  - analytics_events (tracking page views and clicks)

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // shops: anyone can read; authenticated users can create/update their own
    match /shops/{shopId} {
      allow read: if true;  // Public read access
      allow create: if request.auth != null
                     && request.resource.data.owner_id == request.auth.uid;
      allow update, delete: if request.auth != null
                            && resource.data.owner_id == request.auth.uid;
    }

    // profiles: anyone can read profiles; users can create/write their own
    match /profiles/{userId} {
      // Allow anyone to read profiles (for public pages)
      allow read: if true;
      
      // Allow users to create their own profile during signup
      allow create: if request.auth != null
                     && request.auth.uid == userId
                     && request.resource.data.user_id == request.auth.uid;
      
      // Allow users to update their own profile or admins to update any
      allow update: if request.auth != null
                     && (request.auth.uid == userId
                         || request.auth.token.admin == true);
      
      // Only allow users to delete their own profile
      allow delete: if request.auth != null
                     && request.auth.uid == userId;
    }

    // reviews: anyone can read visible reviews; anyone can create reviews
    match /reviews/{reviewId} {
      // Anyone can read visible reviews
      allow read: if true;
      
      // Anyone can create a review (even unauthenticated users)
      allow create: if request.resource.data.shop_id is string
                     && request.resource.data.reviewer_name is string
                     && request.resource.data.rating is number
                     && request.resource.data.rating >= 1
                     && request.resource.data.rating <= 5;
      
      // Only shop owners can update/delete reviews for their shop
      allow update, delete: if request.auth != null
                            && exists(/databases/$(database)/documents/shops/$(resource.data.shop_id))
                            && get(/databases/$(database)/documents/shops/$(resource.data.shop_id)).data.owner_id == request.auth.uid;
    }

    // analytics_events: anyone can create events (for tracking); only owners can read
    match /analytics_events/{eventId} {
      // Anyone can create analytics events (page views, clicks)
      allow create: if request.resource.data.shop_id is string
                     && request.resource.data.event_type is string;
      
      // Only shop owners can read their analytics
      allow read: if request.auth != null
                   && exists(/databases/$(database)/documents/shops/$(resource.data.shop_id))
                   && get(/databases/$(database)/documents/shops/$(resource.data.shop_id)).data.owner_id == request.auth.uid;
    }

    // roles: users can read their own roles; only admins may modify
    match /roles/{roleId} {
      // Users can read their own roles
      allow read: if request.auth != null && (
                    resource.data.user_id == request.auth.uid
                    || request.auth.token.admin == true);
      
      // Only admins can create/update/delete roles
      allow create, update, delete: if request.auth != null
                                    && request.auth.token.admin == true;
    }

    // lock down everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
